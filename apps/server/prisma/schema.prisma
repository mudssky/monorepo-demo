// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE //正常
  INACTIVE //暂时未使用
  DISABLE //禁用
}

model User {
  id        Int        @id @default(autoincrement())
  // 邮箱
  email     String     @unique
  // 用户名
  name      String     @unique
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
}
