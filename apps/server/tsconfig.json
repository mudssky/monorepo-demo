{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": true
  },
  "include": ["test", "src"],
  "watchOptions": {
    "excludeFiles": [
      "node_modules",
      "test",
      "dist",
      "**/*spec.ts",
      "src/metadata.ts"
    ]
  }
}
