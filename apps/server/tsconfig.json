{
  "extends": "@mudssky/tsconfig/nestjs.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2023",
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/redis": [
        "./libs/redis/src"
      ],
      "@app/redis/*": [
        "./libs/redis/src/*"
      ],
      "@lib": [
        "./libs/index"
      ],
      "@root/*": [
        "./*"
      ],
      "#prisma": [
        "./prisma/generated/client"
      ]
    },
    "composite": true
  },
  "include": [
    "test",
    "src/**/*.ts",
    "libs/**/*.ts",
    "src/**/*.json",
    "prisma/**/*.ts",
  ],
  "watchOptions": {
    "excludeFiles": [
      "node_modules",
      "test",
      "dist",
      "**/*spec.ts",
      "src/metadata.ts"
    ]
  }
}