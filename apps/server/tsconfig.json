{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/redis": ["libs/redis/src"],
      "@app/redis/*": ["libs/redis/src/*"],
      "@lib": ["libs/index"]
    },
    "composite": true
  },
  "include": ["test", "src/**/*.ts", "libs/**/*.ts"],
  "watchOptions": {
    "excludeFiles": [
      "node_modules",
      "test",
      "dist",
      "**/*spec.ts",
      "src/metadata.ts"
    ]
  }
}
