{
  "extends": [
    "@mudssky/tsconfig/vite.json"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@server/*": [
        "../server/*"
      ]
    },
    "jsx": "react-jsx",
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../server/"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../server/tsconfig.json"
    }
  ]
}