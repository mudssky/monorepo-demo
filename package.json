{
  "name": "monorepo-demo",
  "private": true,
  "scripts": {
    "admin-dev": "turbo run do-admin-dev",
    "build": "turbo run build --filter=!docs",
    "dev": "turbo run dev --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "lint": "turbo run lint",
    "publish-packages": "turbo run lint test && changeset version && changeset publish",
    "server:dev": "turbo run dev --filter=server",
    "test": "turbo run test",
    "turbo:upgrade": "pnpm dlx @turbo/codemod migrate",
    "prepare": "husky"
  },
  "dependencies": {
    "@mudssky/jsutils": "^1.31.0",
    "dayjs": "^1.11.19",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@mudssky/prettier-config-custom": "workspace:*",
    "@mudssky/tsconfig": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20251207.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.20",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
